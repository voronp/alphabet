{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "allowJs": true,
    "composite": true,
    "baseUrl": ".",
    "types": ["dom-speech-recognition"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "typeAcquisition": {
    "include": [
      "dom-speech-recognition"
    ]
  }
}
